<launch>
  <arg name="world_name" default="basic"/>
  <arg name="enable_ground_truth" default="true" />

  <env name="GAZEBO_MODEL_PATH" value="${GAZEBO_MODEL_PATH}:$(find rotors_gazebo)/models"/>
  <env name="GAZEBO_RESOURCE_PATH" value="${GAZEBO_RESOURCE_PATH}:$(find rotors_gazebo)/models"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find rotors_gazebo)/worlds/$(arg world_name).world" />
    <arg name="paused" value="true"/>
    <arg name="verbose" value="true"/>
  </include>

  <group ns="uav1">
    <include file="$(find dji_m100_gazebo)/launch/spawn_dji_m100.launch">
      <arg name="name" value="uav1" />
      <arg name="model" value="$(find dji_m100_description)/urdf/rotors/dji_m100.urdf.xacro"/>
    </include>
    <node name="lee_position_controller_node" pkg="rotors_control" type="lee_position_controller_node" output="screen">
      <rosparam command="load" file="$(find dji_m100_gazebo)/resource/lee_controller_dji_m100.yaml" />
      <rosparam command="load" file="$(find dji_m100_gazebo)/resource/dji_m100.yaml" />
    </node>
    <node name="hovering_example" pkg="rotors_gazebo" type="hovering_example" output="screen"/>
    <node name="waypoint_publisher" pkg="rotors_gazebo" type="waypoint_publisher" output="screen"/>
  </group>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find dji_m100_gazebo)/rviz_cfg/flight.rviz"/>
</launch>
